--Good starting point to view all the columns and rows 
SELECT *
FROM fortune_companies;

--How many companies offer healthcare benefits verus those that don't? 
SELECT 
  CASE
    WHEN healthcare_benefits = 1 THEN 'Offers Healthcare'
    Else 'No Healthcare'
  END AS healthcare_status,
  COUNT(*) AS company_count
FROM fortune_companies
GROUP BY healthcare_status;

--Which industries have a robust presence (at least 5 companies) and what is their average revenue? 
SELECT industry,
  COUNT(*) AS total_companies,
  AVG(revenue) AS avg_revenue
FROM fortune_companies
GROUP BY industry
HAVING COUNT(*) >= 5;

--Which companies in the Technology or Healthcare industries offer generous paid time off (at least 20 days)?
SELECT company_name, industry, paid_time_off_days
FROM fortune_companies 
WHERE (industry = 'Technology' OR industry = 'Healthcare')
  AND paid_time_off_days >= 20;
  
--What is the total revenue generated by companies that do not offer healthcare benefits? 
SELECT SUM(revenue) AS total_revenue_no_healthcare
FROM fortune_companies
WHERE healthcare_benefits = 0;

--How does the average revenue differ between companies with "Generous" PTO (20 or more days) and those with "Standard" PTO? 
SELECT
  CASE 
    WHEN paid_time_off_days >= 20 THEN 'Generous PTO'
    ELSE 'Standard PTO'
  END AS pto_category,
  AVG(revenue) AS avg_revenue
FROM fortune_companies
GROUP BY pto_category; 

--Find companies that do not belong to the "Finance" or "Energy" industries and have an average employee tenure of more than 6 years. 
SELECT company_name, industry, avg_employee_tenure
FROM fortune_companies
WHERE industry NOT IN ('Finance', 'Energy')
  AND avg_employee_tenure > 6; 
